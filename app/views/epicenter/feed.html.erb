<div class="row">
  <div class="col-md-12">
    <h1 class="text-center">@<%= current_user.username %>'s Twitter Feed</h1>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <p class="text-center">Here is what your "friends" are saying:</p>
  </div>
</div>

<% @following_tweets.each do |tweet| %>
<div class="row">
  <div class="col-md-12">
    <div class="well">
      <p>
      <%= image_tag tweet.user.avatar.url, size: 50 %>
      @<%= link_to tweet.user.username, show_user_path(id: tweet.user_id) %>
      â€¢
      <%= time_ago_in_words(tweet.created_at) if Time.now - tweet.created_at < 86400 %>
      <%= tweet.created_at.strftime('%b%e') if Time.now - tweet.created_at > 86400 %>         
      </p>
      <p>
        <%= tweet.message.html_safe %>
      </p>
    </div>
  </div>
</div>
<% end %>
